<%= form_for(@genre) do |f| %>
<%= render 'shared/errors', object: @genre %>
  <fieldset>
    <ol>
      <li class="required">
        <%= f.label :name %>
        <%= f.text_field :name, autofocus: true %>
      </li>
      <%= f.submit %>
      <%= link_to "Cancel", genres_path, class: 'button' %>
      <% if @genre.persisted? %>
        <%= link_to 'Delete', @genre, class: 'button', method: :delete, data: { confirm: 'Are you sure?' } %>
      <% end %>
    </p>
  </fieldset>
<% end %>
